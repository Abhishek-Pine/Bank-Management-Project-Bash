#!/bin/bash
e=1
clear
while [ $e -eq 1 ]
do
echo -en "\n\t Customer Menu\n\n1. View Details\n2. Debit \n3. Credit \n4. Edit Phone No \n5. Edit E-mail \n6. Change Password \n7. Logout \n\nEnter Your Choice : "
read s

case $s in
1)
./custview $1
;;

2)
;;

3)
;;

4)
r=9
let "r--"
echo "$(head -$r $1)" >> temp
let "r=r+2"
echo "\nEnter Phone No : " 
read ph
echo "$ph" >> temp
echo "$(tail +$r $1)" >> temp
;;

5)
r=8
let "r--"
echo "$(head -$r $1)" >> temp
let "r=r+2"
echo "\nEnter Email : " 
read email
echo "$email" >> temp
echo "$(tail +$r $1)" >> temp
;;

6)
r=3
let "r--"
echo "$(head -$r $1)" >> temp
let "r=r+2"
echo "\nEnter Password : " 
read pas
echo "$pas" >> temp
echo "$(tail +$r $1)" >> temp

;;

7)
e=2
;;

*)
echo -e "\nOops!! Invalid Input" ;;

esac

if [ -f "temp" ];
then
rm -r $1
mv temp $1
fi
done
